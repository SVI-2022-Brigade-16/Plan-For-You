generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  hash      String
  hashedRt  String?
  firstName String?
  lastName  String?

  @@map("user")
}

model PlanMeeting {
  planID                   String @id @default(uuid())
  userID                   Int
  weekCount                Int
  timeslotLengthMinutes    Int
  timeslotStartTimeMinutes Int

  @@map("plan_meeting")
}
